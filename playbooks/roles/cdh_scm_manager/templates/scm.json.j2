{
  "items" : [
    {% if cloudera_parcel_repositories is defined %}
    {
      "name" : "REMOTE_PARCEL_REPO_URLS",
      "value" : {% set repo_j = joiner(",") %}
      "{% for repo in cloudera_parcel_repositories %}{{ repo_j() }}{{ repo }}{% endfor %}"
    }
    {% elif cloudera_version is defined %}
    {
      "name" : "REMOTE_PARCEL_REPO_URLS",
            "value" : "http://archive.cloudera.com/cdh{{ cloudera_version|regex_replace('^([0-9]+)(.*)$', '\1') }}/parcels/{{ cloudera_version }}/"
    }
   {% endif %}
  ]
}
